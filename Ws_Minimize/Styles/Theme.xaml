<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!-- Campbell-inspired palette -->
    <Color x:Key="Color.Surface">#FF181A1F</Color>
    <Color x:Key="Color.SurfaceAlt">#FF1F222A</Color>
    <Color x:Key="Color.Foreground">#FFF8F8F8</Color>
    <Color x:Key="Color.Accent">#FF1F6FEB</Color>
    <Color x:Key="Color.AccentSecondary">#FF0DBC79</Color>
    <Color x:Key="Color.Boost">#FFC50F1F</Color>

    <SolidColorBrush x:Key="Brush.Surface" Color="{StaticResource Color.Surface}" />
    <SolidColorBrush x:Key="Brush.SurfaceAlt" Color="{StaticResource Color.SurfaceAlt}" />
    <SolidColorBrush x:Key="Brush.Foreground" Color="{StaticResource Color.Foreground}" />
    <SolidColorBrush x:Key="Brush.Accent" Color="{StaticResource Color.Accent}" />
    <SolidColorBrush x:Key="Brush.AccentSecondary" Color="{StaticResource Color.AccentSecondary}" />
    <SolidColorBrush x:Key="Brush.Muted" Color="#99FFFFFF" />
    <SolidColorBrush x:Key="Brush.Border" Color="#33FFFFFF" />
    <SolidColorBrush x:Key="Brush.Shadow" Color="#66000000" />

    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource Brush.Surface}" />
        <Setter Property="Foreground" Value="{StaticResource Brush.Foreground}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style x:Key="HeaderShellStyle" TargetType="Border">
        <Setter Property="Padding" Value="32,24" />
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#262832" Offset="0" />
                    <GradientStop Color="#1B1E24" Offset="1" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="CornerRadius" Value="24" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.35" Color="#80000000" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Padding" Value="18" />
        <Setter Property="CornerRadius" Value="18" />
        <Setter Property="Background" Value="{StaticResource Brush.SurfaceAlt}" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="18" ShadowDepth="0" Opacity="0.25" Color="#99000000" />
            </Setter.Value>
        </Setter>
        <Setter Property="Opacity" Value="0" />
        <Style.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation To="1"
                                         Duration="0:0:0.35"
                                         Storyboard.TargetProperty="Opacity" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="GlassPanelStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#33242A35" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="MetricCardStyle" TargetType="Border">
        <Setter Property="Margin" Value="8" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Background" Value="#661F2B34" />
    </Style>

    <Style x:Key="MetricValueStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="0,0,0,4" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="Background" Value="#332F363F" />
        <Setter Property="Foreground" Value="{StaticResource Brush.Foreground}" />
        <Setter Property="Padding" Value="10,6" />
        <Setter Property="Margin" Value="0,0,0,0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="#44FFFFFF" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#553C4653" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.4" />
                            <Setter Property="Cursor" Value="Arrow" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="AccentButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="{StaticResource Brush.Accent}" />
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Accent}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#33000000" BlurRadius="12" ShadowDepth="0" />
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource Brush.AccentSecondary}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="ChipStyle" TargetType="Border">
        <Setter Property="Background" Value="#332F363F" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="12,6" />
    </Style>

    <Style x:Key="SwitchButtonStyle" TargetType="ToggleButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border x:Name="Shell"
                            Background="#332F363F"
                            BorderBrush="#33FFFFFF"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="12,6">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Shell" Property="Background" Value="#332D4E88" />
                            <Setter Property="Foreground" Value="{StaticResource Brush.AccentSecondary}" />
                            <Setter TargetName="Shell" Property="BorderBrush" Value="{StaticResource Brush.AccentSecondary}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ToggleCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource Brush.Foreground}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Border x:Name="Box"
                            Padding="8,4"
                            CornerRadius="8"
                            Background="#222C3540">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="Indicator"
                                     Width="14"
                                     Height="14"
                                     StrokeThickness="2"
                                     Stroke="{StaticResource Brush.Border}"
                                     Fill="Transparent" />
                            <ContentPresenter VerticalAlignment="Center" Margin="8,0,0,0" />
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Box" Property="Background" Value="#44366CE0" />
                            <Setter TargetName="Indicator" Property="Fill" Value="{StaticResource Brush.AccentSecondary}" />
                            <Setter TargetName="Indicator" Property="Stroke" Value="{StaticResource Brush.AccentSecondary}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Foreground" Value="{StaticResource Brush.Foreground}" />
        <Setter Property="Background" Value="#2229303A" />
        <Setter Property="BorderBrush" Value="#22405060" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="10,6" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid>
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10" />
                        <ScrollViewer x:Name="PART_ContentHost"
                                      Margin="4"
                                      VerticalScrollBarVisibility="{TemplateBinding ScrollViewer.VerticalScrollBarVisibility}"
                                      HorizontalScrollBarVisibility="{TemplateBinding ScrollViewer.HorizontalScrollBarVisibility}" />
                        <TextBlock x:Name="Placeholder"
                                   Text="{TemplateBinding Tag}"
                                   Margin="12,2,0,0"
                                   Foreground="#55FFFFFF"
                                   IsHitTestVisible="False"
                                   Visibility="Collapsed" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                            <Setter TargetName="Placeholder" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="Text" Value="{x:Null}">
                            <Setter TargetName="Placeholder" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource Brush.Accent}" />
                            <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ScrollViewer">
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <Style x:Key="FlatDataGridStyle" TargetType="DataGrid">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Foreground" Value="{StaticResource Brush.Foreground}" />
        <Setter Property="GridLinesVisibility" Value="None" />
        <Setter Property="RowBackground" Value="#11212933" />
        <Setter Property="AlternatingRowBackground" Value="#221A2027" />
        <Setter Property="HorizontalGridLinesBrush" Value="#22FFFFFF" />
        <Setter Property="VerticalGridLinesBrush" Value="#22FFFFFF" />
    </Style>

    <Style x:Key="FileItemStyle" TargetType="Border">
        <Setter Property="Margin" Value="0,0,0,10" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Background" Value="#262E3845" />
    </Style>

    <Style x:Key="RangeListStyle" TargetType="ListBox">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style x:Key="RangeItemStyle" TargetType="Border">
        <Setter Property="Margin" Value="0,0,0,12" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Background" Value="#332E3A46" />
    </Style>
</ResourceDictionary>
