<Window x:Class="Deduplinside.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Deduplinside"
        WindowStartupLocation="CenterScreen"
        Height="860"
        Width="1420"
        MinHeight="760"
        MinWidth="1180">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Style="{StaticResource HeaderShellStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Deduplinside"
                               FontSize="32"
                               FontWeight="Bold"
                               Margin="0,0,0,4"/>
                    <TextBlock Text="Deduplicación moderna con análisis en vivo, extractores inteligentes y fusiones de alta velocidad."
                               Opacity="0.75"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Style="{StaticResource ChipStyle}" Margin="0,0,8,0">
                        <TextBlock Text="{Binding StatusMessage}" />
                    </Border>
                    <Border Style="{StaticResource ChipStyle}">
                        <TextBlock Text="{Binding OverallProgress, StringFormat='{}{0}% completado'}"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0,18,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Left column: Files and filters -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,12,0">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                        <TextBlock Text="Filtros de extensión" Style="{StaticResource SectionTitleStyle}"/>
                        <ItemsControl ItemsSource="{Binding ExtensionOptions}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Extension}"
                                              IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                              Style="{StaticResource ToggleCheckBoxStyle}"
                                              Margin="0,4,8,0"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,12">
                        <Button Content="Agregar archivos"
                                Command="{Binding BrowseFilesCommand}"
                                Style="{StaticResource AccentButtonStyle}"
                                Margin="0,0,8,0"/>
                        <Button Content="Limpiar lista"
                                Command="{Binding ClearFilesCommand}"/>
                    </StackPanel>

                    <TextBlock Text="Archivos en cola" Style="{StaticResource SectionTitleStyle}" Margin="0,0,0,6"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Files}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource FileItemStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding FullPath}" Opacity="0.6" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                            <CheckBox Grid.Column="1"
                                                      VerticalAlignment="Center"
                                                      IsChecked="{Binding IsQueued, Mode=TwoWay}"
                                                      Content="Procesar"
                                                      Style="{StaticResource ToggleCheckBoxStyle}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </Border>

            <!-- Center column: Controls and analysis -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="Ejecución" Style="{StaticResource SectionTitleStyle}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,12">
                        <ToggleButton Content="Paralelo"
                                      IsChecked="{Binding UseParallelProcessing}"
                                      Style="{StaticResource SwitchButtonStyle}"
                                      Margin="0,0,10,0"/>
                        <ToggleButton Content="En cola"
                                      IsChecked="{Binding UseQueuedProcessing}"
                                      Style="{StaticResource SwitchButtonStyle}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="Procesar"
                                Command="{Binding ProcessFilesCommand}"
                                Style="{StaticResource AccentButtonStyle}"
                                Width="120"
                                Margin="0,0,10,0"/>
                        <Button Content="Cancelar"
                                Command="{Binding CancelCommand}"
                                Width="100"
                                Margin="0,0,10,0"/>
                        <Button Content="Fusionar"
                                Command="{Binding MergeFilesCommand}"
                                Width="110"
                                Margin="0,0,10,0"/>
                        <Button Content="Exportar rangos"
                                Command="{Binding ExportRangesCommand}"
                                Width="150"
                                Margin="0,0,10,0"/>
                        <Button Content="Re-analizar"
                                Command="{Binding SearchCommand}"
                                Width="120"/>
                    </StackPanel>

                    <TextBlock Text="Panel de análisis" Style="{StaticResource SectionTitleStyle}" Margin="0,20,0,6"/>
                    <Border Style="{StaticResource GlassPanelStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <ProgressBar Value="{Binding OverallProgress}" Maximum="100" Height="6" Margin="0,0,0,12"/>
                            <UniformGrid Grid.Row="1" Columns="3" Rows="2" Margin="0,8,0,0" HorizontalAlignment="Stretch">
                                <Border Style="{StaticResource MetricCardStyle}">
                                    <StackPanel>
                                        <TextBlock Text="Líneas procesadas"/>
                                        <TextBlock Text="{Binding Stats.ProcessedLines}" Style="{StaticResource MetricValueStyle}"/>
                                    </StackPanel>
                                </Border>
                                <Border Style="{StaticResource MetricCardStyle}">
                                    <StackPanel>
                                        <TextBlock Text="Duplicados"/>
                                        <TextBlock Text="{Binding Stats.DuplicateLines}" Style="{StaticResource MetricValueStyle}"/>
                                    </StackPanel>
                                </Border>
                                <Border Style="{StaticResource MetricCardStyle}">
                                    <StackPanel>
                                        <TextBlock Text="Rangos detectados"/>
                                        <TextBlock Text="{Binding Stats.RangeMatches}" Style="{StaticResource MetricValueStyle}"/>
                                    </StackPanel>
                                </Border>
                                <Border Style="{StaticResource MetricCardStyle}">
                                    <StackPanel>
                                        <TextBlock Text="Archivos completados"/>
                                        <TextBlock Text="{Binding Stats.CompletedFiles}" Style="{StaticResource MetricValueStyle}"/>
                                    </StackPanel>
                                </Border>
                                <Border Style="{StaticResource MetricCardStyle}">
                                    <StackPanel>
                                        <TextBlock Text="Velocidad (lps)"/>
                                        <TextBlock Text="{Binding Stats.LinesPerSecond, StringFormat='{}{0:F2}'}" Style="{StaticResource MetricValueStyle}"/>
                                    </StackPanel>
                                </Border>
                                <Border Style="{StaticResource MetricCardStyle}">
                                    <StackPanel>
                                        <TextBlock Text="ETA"/>
                                        <TextBlock Text="{Binding Stats.EtaText}" Style="{StaticResource MetricValueStyle}"/>
                                    </StackPanel>
                                </Border>
                            </UniformGrid>
                        </Grid>
                    </Border>

                    <TextBlock Text="Búsqueda y extracción" Style="{StaticResource SectionTitleStyle}" Margin="0,18,0,6"/>
                    <StackPanel>
                        <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True"
                                 Height="100"
                                 TextWrapping="Wrap"
                                 x:Name="SearchInput"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 Tag="Frase o palabra a buscar en vivo"/>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBox Text="{Binding RangeStartMarker, UpdateSourceTrigger=PropertyChanged}"
                                     MinWidth="160"
                                     Tag="Inicio del rango"
                                     Margin="0,0,8,0"/>
                            <TextBox Text="{Binding RangeEndMarker, UpdateSourceTrigger=PropertyChanged}"
                                     MinWidth="160"
                                     Tag="Fin del rango"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Right column: viewer -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                <Grid>
                    <TabControl>
                        <TabItem Header="Duplicados">
                            <DataGrid ItemsSource="{Binding DuplicateEntries}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      HeadersVisibility="Column"
                                      Style="{StaticResource FlatDataGridStyle}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Archivo" Binding="{Binding FilePath}" Width="2*"/>
                                    <DataGridTextColumn Header="Línea" Binding="{Binding LineNumber}" Width="Auto"/>
                                    <DataGridTextColumn Header="Contenido" Binding="{Binding Content}" Width="3*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                        <TabItem Header="Rangos">
                            <ListBox ItemsSource="{Binding RangeMatches}" Style="{StaticResource RangeListStyle}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource RangeItemStyle}">
                                            <StackPanel>
                                                <TextBlock Text="{Binding FilePath}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Content}"
                                                           TextWrapping="Wrap"
                                                           Margin="0,4,0,0"
                                                           MaxHeight="160"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock>
                                                    <Run Text="Líneas "/>
                                                    <Run Text="{Binding StartLine}"/>
                                                    <Run Text=" - "/>
                                                    <Run Text="{Binding EndLine}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </TabItem>
                        <TabItem Header="Búsquedas">
                            <DataGrid ItemsSource="{Binding SearchHits}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      Style="{StaticResource FlatDataGridStyle}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Archivo" Binding="{Binding FilePath}" Width="2*"/>
                                    <DataGridTextColumn Header="Línea" Binding="{Binding LineNumber}" Width="Auto"/>
                                    <DataGridTextColumn Header="Coincidencia" Binding="{Binding Snippet}" Width="3*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                        <TabItem Header="Preview">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock Text="{Binding PreviewContent}"
                                           FontFamily="Cascadia Code, Consolas"
                                           TextWrapping="Wrap"
                                           Margin="4"/>
                            </ScrollViewer>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
