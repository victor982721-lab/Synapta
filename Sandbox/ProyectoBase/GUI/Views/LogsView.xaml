<UserControl x:Class="ProyectoBase.GUI.Views.LogsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">

    <Grid Margin="10">
        <StackPanel>

            <TextBlock Text="Logs del Sistema"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Margin="0 0 0 10"/>

            <Separator Margin="0 0 0 10"/>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock Text="
Aquí podrás colocar registros detallados,
logs de ejecución y trazas cuando integres la funcionalidad real."
                           FontFamily="Consolas"
                           FontSize="13"
                           TextWrapping="Wrap"/>
            </ScrollViewer>

        </StackPanel>
    </Grid>

</UserControl>
