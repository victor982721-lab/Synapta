<UserControl x:Class="ProyectoBase.GUI.Views.ToolsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">

    <Grid Margin="10">
        <StackPanel>

            <TextBlock Text="Herramientas"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Margin="0 0 0 10"/>

            <Separator Margin="0 0 0 10"/>

            <TextBlock Text="
Este panel se utilizará para colocar utilidades adicionales
como analizadores, generadores, o módulos extendidos."
                       FontSize="14"
                       TextWrapping="Wrap"/>

        </StackPanel>
    </Grid>

</UserControl>
