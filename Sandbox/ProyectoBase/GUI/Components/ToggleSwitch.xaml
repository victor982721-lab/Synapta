<UserControl x:Class=""ProyectoBase.GUI.Components.ToggleSwitch""
             xmlns=""http://schemas.microsoft.com/winfx/2006/xaml/presentation""
             xmlns:x=""http://schemas.microsoft.com/winfx/2006/xaml"">

    <StackPanel>
        <TextBlock Style=""{StaticResource SubtitleText}""
                   Text=""{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}""/>

        <ToggleButton x:Name=""Switch""
                      IsChecked=""{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}""
                      Width=""50"" Height=""24""
                      Background=""{StaticResource BorderBrush}""
                      BorderThickness=""0"">
            <ToggleButton.Template>
                <ControlTemplate TargetType=""ToggleButton"">
                    
                    <Grid Width=""50"" Height=""24"">
                        <Border x:Name=""Track""
                                CornerRadius=""12""
                                Background=""{StaticResource BorderBrush}""/>

                        <Ellipse x:Name=""Thumb""
                                 Fill=""{StaticResource TextBrush}""
                                 Width=""20"" Height=""20""
                                 Margin=""2""/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property=""IsChecked"" Value=""True"">
                            <Setter TargetName=""Track"" Property=""Background"" Value=""{StaticResource PrimaryBrush}""/>
                            <Setter TargetName=""Thumb"" Property=""Margin"" Value=""28,2,0,2""/>
                        </Trigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </ToggleButton.Template>
        </ToggleButton>

    </StackPanel>

</UserControl>
