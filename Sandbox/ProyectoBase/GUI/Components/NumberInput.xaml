<UserControl x:Class=""ProyectoBase.GUI.Components.NumberInput""
             xmlns=""http://schemas.microsoft.com/winfx/2006/xaml/presentation""
             xmlns:x=""http://schemas.microsoft.com/winfx/2006/xaml"">

    <StackPanel>
        <TextBlock Style=""{StaticResource SubtitleText}""
                   Text=""{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}""/>

        <TextBox Text=""{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}""
                 PreviewTextInput=""NumberOnly""
                 Background=""{StaticResource InputBackgroundBrush}""
                 Foreground=""{StaticResource TextBrush}""
                 BorderBrush=""{StaticResource BorderBrush}""
                 BorderThickness=""1""
                 Padding=""6""/>
    </StackPanel>

</UserControl>
