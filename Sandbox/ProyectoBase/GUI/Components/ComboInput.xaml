<UserControl x:Class=""ProyectoBase.GUI.Components.ComboInput""
             xmlns=""http://schemas.microsoft.com/winfx/2006/xaml/presentation""
             xmlns:x=""http://schemas.microsoft.com/winfx/2006/xaml"">

    <StackPanel>
        <TextBlock Style=""{StaticResource SubtitleText}""
                   Text=""{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}""/>

        <ComboBox ItemsSource=""{Binding Items, RelativeSource={RelativeSource AncestorType=UserControl}}""
                  SelectedItem=""{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}""
                  Background=""{StaticResource InputBackgroundBrush}""
                  Foreground=""{StaticResource TextBrush}""
                  BorderBrush=""{StaticResource BorderBrush}""
                  BorderThickness=""1""
                  Padding=""6""/>
    </StackPanel>

</UserControl>
