<UserControl x:Class=""ProyectoBase.GUI.Components.MultiLineInput""
             xmlns=""http://schemas.microsoft.com/winfx/2006/xaml/presentation""
             xmlns:x=""http://schemas.microsoft.com/winfx/2006/xaml"">

    <StackPanel>
        <TextBlock Text=""{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}"" 
                   Style=""{StaticResource SubtitleText}""/>

        <TextBox Text=""{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}""
                 Background=""{StaticResource InputBackgroundBrush}""
                 Foreground=""{StaticResource TextBrush}""
                 BorderBrush=""{StaticResource BorderBrush}""
                 BorderThickness=""1""
                 Padding=""6""
                 AcceptsReturn=""True""
                 TextWrapping=""Wrap""
                 Height=""100""
                 Margin=""0 0 0 8""/>
    </StackPanel>

</UserControl>
