<UserControl x:Class=""ProyectoBase.GUI.Components.SliderInput""
             xmlns=""http://schemas.microsoft.com/winfx/2006/xaml/presentation""
             xmlns:x=""http://schemas.microsoft.com/winfx/2006/xaml"">

    <StackPanel>
        <TextBlock Style=""{StaticResource SubtitleText}""
                   Text=""{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}""/>

        <Slider Minimum=""{Binding Min, RelativeSource={RelativeSource AncestorType=UserControl}}""
                Maximum=""{Binding Max, RelativeSource={RelativeSource AncestorType=UserControl}}""
                Value=""{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}""
                Margin=""0 4 0 0""/>

        <TextBlock Text=""{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}}"" 
                   Style=""{StaticResource BodyText}""/>
    </StackPanel>

</UserControl>
