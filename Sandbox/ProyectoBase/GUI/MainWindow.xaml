<Window x:Class="ProyectoBase.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:ProyectoBase.GUI.Views"
        Title="ProyectoBase"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Window.Resources>

        <!-- Botones Sidebar con iconos -->
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="8 6"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Opacity" Value="0.6"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">

                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <DockPanel>

                                <!-- Ãcono -->
                                <Path x:Name="IconPath"
                                      Fill="{StaticResource TextBrush}"
                                      Width="20"
                                      Height="20"
                                      Margin="5 0 10 0"
                                      VerticalAlignment="Center"
                                      Data="{TemplateBinding Tag}"/>

                                <!-- Texto -->
                                <TextBlock Text="{TemplateBinding Content}"
                                           VerticalAlignment="Center"
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextBrush}"/>
                            </DockPanel>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="1"/>
                                <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <DockPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="20 15 20 10">
            <TextBlock Text="ProyectoBase"
                       FontSize="26"
                       FontWeight="SemiBold"
                       DockPanel.Dock="Left"
                       VerticalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">

                <Button Content="Light" Width="70" Margin="0 0 10 0"
                        Click="OnLightTheme"/>

                <Button Content="Dark" Width="70"
                        Click="OnDarkTheme"/>

            </StackPanel>
        </DockPanel>

        <!-- SIDEBAR -->
        <Grid Grid.Row="1" Grid.Column="0" Margin="10">

            <Canvas x:Name="HighlightCanvas">
                <Rectangle x:Name="HighlightBar"
                           Width="6"
                           Height="36"
                           Fill="{StaticResource PrimaryBrush}"
                           RadiusX="3" RadiusY="3"
                           Canvas.Top="0"/>
            </Canvas>

            <StackPanel x:Name="SidebarPanel"
                        Background="{StaticResource InputBackgroundBrush}"
                        Margin="10"
                        Padding="10">

                <Button Content="Home"
                        Tag="M10,2 L2,10 L2,18 L8,18 L8,12 L12,12 L12,18 L18,18 L18,10 z"
                        Style="{StaticResource SidebarButton}"
                        Click="OnNavHome"/>

                <Button Content="Config"
                        Tag="M12 2 L14 6 L18 7 L15 10 L16 14 L12 12 L8 14 L9 10 L6 7 L10 6 z"
                        Style="{StaticResource SidebarButton}"
                        Click="OnNavConfig"/>

                <Button Content="Logs"
                        Tag="M4 4 H16 V6 H4 z M4 9 H16 V11 H4 z M4 14 H16 V16 H4 z"
                        Style="{StaticResource SidebarButton}"
                        Click="OnNavLogs"/>

                <Button Content="Tools"
                        Tag="M6 2 L10 2 L10 6 L6 6 z M14 2 L18 2 L18 6 L14 6 z
                             M6 8 L10 8 L10 12 L6 12 z M14 8 L18 8 L18 12 L14 12 z"
                        Style="{StaticResource SidebarButton}"
                        Click="OnNavTools"/>

            </StackPanel>
        </Grid>

        <!-- CONTENIDO -->
        <Border Grid.Row="1" Grid.Column="1"
                CornerRadius="10"
                Padding="10"
                Margin="10"
                Background="{StaticResource InputBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1">

            <Frame x:Name="MainFrame"
                   NavigationUIVisibility="Hidden"
                   Background="{StaticResource InputBackgroundBrush}"/>
        </Border>

    </Grid>
</Window>
