<Window x:Class="HybridCliShell.Windows.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Shell Híbrido"
        Width="960"
        Height="540"
        Background="{DynamicResource SurfaceBrush}">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" Grid.Column="0" Margin="0,0,24,0">
                <TextBlock Text="Shell híbrido CLI + UI" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}" />
                <TextBlock Text="Personaliza la UI mientras los comandos CLI siguen disponibles" Foreground="{DynamicResource SecondaryTextBrush}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="1">
                <Button Content="Alternar tema" Command="{Binding ToggleThemeCommand}" Margin="0,0,12,0" />
                <Button Content="Pulso CLI" Command="{Binding ForcePulseCommand}" />
            </StackPanel>
        </Grid>
        <Border Grid.Row="1" Margin="0,24,0,12" Background="{DynamicResource CardBrush}" CornerRadius="16" Padding="24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Telemetría en vivo" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}" />
                    <TextBlock Text="{Binding Status}" Margin="0,6,0,12" Foreground="{DynamicResource SecondaryTextBrush}" />
                    <ItemsControl ItemsSource="{Binding Samples}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="8" Background="{DynamicResource AccentBrush}" Padding="12" Margin="0,0,0,8">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Timestamp, StringFormat=HH:mm:ss}" FontWeight="Bold" />
                                        <TextBlock Text="{Binding ActiveOperations, StringFormat=Operaciones: {0}}" />
                                        <TextBlock Text="{Binding Throughput, StringFormat=Throughput: {0:F2} ops/s}" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="24,0,0,0">
                    <TextBlock Text="Registro compartido" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}" />
                    <ListBox ItemsSource="{Binding Logs}" Margin="0,8,0,0" />
                </StackPanel>
            </Grid>
        </Border>
        <Border Grid.Row="2" Padding="16" Background="{DynamicResource CardBrush}" CornerRadius="12">
            <StackPanel>
                <TextBlock Text="Estado actual" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}" />
                <TextBlock Text="{Binding CurrentTheme, StringFormat=Tema activo: {0}}" Foreground="{DynamicResource SecondaryTextBrush}" />
                <TextBlock Text="Ejecuta 'HybridCliShell --cli status' para controlar la app sin UI" Margin="0,12,0,0" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
