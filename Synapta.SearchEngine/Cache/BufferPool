using System.Buffers;

namespace Synapta.SearchEngine.Cache
{
    /// <summary>
    /// Provides a pool of reusable buffers for byte and char arrays.  This helps to minimise
    /// allocations when processing streams of text.  The stub delegates directly to
    /// <see cref="ArrayPool{T}"/>.
    /// </summary>
    public static class BufferPool
    {
        public static byte[] RentByteBuffer(int size) => ArrayPool<byte>.Shared.Rent(size);
        public static void ReturnByteBuffer(byte[] buffer) => ArrayPool<byte>.Shared.Return(buffer);

        public static char[] RentCharBuffer(int size) => ArrayPool<char>.Shared.Rent(size);
        public static void ReturnCharBuffer(char[] buffer) => ArrayPool<char>.Shared.Return(buffer);
    }
}
