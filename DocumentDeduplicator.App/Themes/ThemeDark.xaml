<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="BackgroundColor">#FF1F1F1F</Color>
    <Color x:Key="PrimaryTextColor">#FFF5F5F5</Color>
    <Color x:Key="AccentColor">#FF4DD0E1</Color>

    <SolidColorBrush x:Key="AppBackground" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="PrimaryText" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="AccentText" Color="{StaticResource AccentColor}"/>

    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource AppBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
    </Style>
</ResourceDictionary>
