<Window x:Class="DocumentDeduplicator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Deduplicador de Protocolos"
        Height="900"
        Width="1300"
        MinWidth="1100"
        MinHeight="720">
    <Grid Background="{DynamicResource AppBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="{DynamicResource PanelBackground}"
                BorderBrush="{DynamicResource PanelBorder}"
                BorderThickness="0,0,0,1"
                Padding="10">
            <WrapPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Content="Seleccionar archivos" Command="{Binding SelectFilesCommand}" Margin="0,0,8,8"/>
                <Button Content="Limpiar lista" Command="{Binding ClearFilesCommand}" Margin="0,0,8,8"/>
                <Button Content="Analizar" Command="{Binding AnalyzeCommand}" Margin="0,0,8,8"/>
                <Button Content="Exportar resultados" Command="{Binding ExportCommand}" Margin="0,0,8,8"/>
                <Button Content="Cambiar tema" Command="{Binding ToggleThemeCommand}" Margin="0,0,8,8"/>
                <StackPanel Orientation="Horizontal" Margin="20,0,0,8" VerticalAlignment="Center">
                    <ProgressBar Width="220"
                                 Height="16"
                                 Maximum="1"
                                 Value="{Binding ProgressValue}"
                                 IsIndeterminate="{Binding IsBusy}"/>
                    <TextBlock Text="{Binding ProgressText}"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource PrimaryText}"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </WrapPanel>
        </Border>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="6"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <GroupBox Header="Archivos y vista previa" Grid.Row="0" Margin="0,0,10,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="1.4*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <DataGrid Grid.Row="0"
                                  ItemsSource="{Binding Files}"
                                  SelectedItem="{Binding SelectedFile}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  HeadersVisibility="Column"
                                  Margin="0,0,0,8">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Nombre" Binding="{Binding Name}" Width="150"/>
                                <DataGridTextColumn Header="Ruta" Binding="{Binding Path}" Width="*"/>
                                <DataGridTextColumn Header="Tamaño" Binding="{Binding Size}" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <TextBlock Grid.Row="1" Text="Vista previa" FontWeight="Bold" Margin="0,0,0,4"/>
                        <Border Grid.Row="2" BorderBrush="{DynamicResource PanelBorder}" BorderThickness="1" Padding="6">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock Text="{Binding SelectedFileContent}"
                                           TextWrapping="Wrap"
                                           FontFamily="Consolas"
                                           Foreground="{DynamicResource PrimaryText}"/>
                            </ScrollViewer>
                        </Border>
                        <TextBlock Grid.Row="3" Text="Fragmentos detectados" FontWeight="Bold" Margin="0,12,0,4"/>
                        <ListBox Grid.Row="4"
                                 ItemsSource="{Binding SelectedFile.Fragments}"
                                 DisplayMemberPath="Label"
                                 Height="120"/>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Resultados" Grid.Row="1" Margin="0,0,10,0">
                    <TabControl>
                        <TabItem Header="Palabras">
                            <DataGrid ItemsSource="{Binding WordFrequencies}" AutoGenerateColumns="False" Margin="4">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Palabra" Binding="{Binding Word}" Width="*"/>
                                    <DataGridTextColumn Header="Frecuencia" Binding="{Binding Count}" Width="100"/>
                                    <DataGridTextColumn Header="Archivos" Binding="{Binding FileCount}" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                        <TabItem Header="Frases">
                            <DataGrid ItemsSource="{Binding PhraseFrequencies}" AutoGenerateColumns="False" Margin="4">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Frase" Binding="{Binding Phrase}" Width="*"/>
                                    <DataGridTextColumn Header="Frecuencia" Binding="{Binding Count}" Width="100"/>
                                    <DataGridTextColumn Header="Archivos" Binding="{Binding FileCount}" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                        <TabItem Header="Duplicados">
                            <Grid Margin="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <DataGrid ItemsSource="{Binding DuplicateBlocks}"
                                          AutoGenerateColumns="False"
                                          Grid.Row="0"
                                          Margin="0,0,0,6">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Hash" Binding="{Binding Hash}" Width="150"/>
                                        <DataGridTextColumn Header="Texto" Binding="{Binding Text}" Width="*"/>
                                        <DataGridTextColumn Header="Frecuencia" Binding="{Binding Frequency}" Width="120"/>
                                        <DataGridTextColumn Header="Archivos" Binding="{Binding FileCount}" Width="120"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <GroupBox Header="Similitud entre archivos" Grid.Row="1">
                                    <DataGrid ItemsSource="{Binding Similarities}" AutoGenerateColumns="False">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Archivo A" Binding="{Binding FileA}" Width="*"/>
                                            <DataGridTextColumn Header="Archivo B" Binding="{Binding FileB}" Width="*"/>
                                            <DataGridTextColumn Header="%" Binding="{Binding SimilarityPercentage}" Width="80"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </GroupBox>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Deduplicación">
                            <DockPanel Margin="4">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                    <Button Content="Aplicar deduplicación" Command="{Binding ApplyDeduplicationCommand}" Margin="0,0,8,0"/>
                                    <TextBlock Text="Selecciona los fragmentos a consolidar" VerticalAlignment="Center"/>
                                </StackPanel>
                                <DataGrid ItemsSource="{Binding DeduplicationPreviews}"
                                          AutoGenerateColumns="False"
                                          DockPanel.Dock="Bottom"
                                          SelectionMode="Extended">
                                    <DataGrid.Columns>
                                        <DataGridCheckBoxColumn Header="Aplicar" Binding="{Binding IsSelected}" Width="60"/>
                                        <DataGridTextColumn Header="Etiqueta" Binding="{Binding Label}" Width="150"/>
                                        <DataGridTextColumn Header="Texto" Binding="{Binding Text}" Width="*"/>
                                        <DataGridTextColumn Header="Archivos" Binding="{Binding Files.Count}" Width="100"/>
                                        <DataGridTextColumn Header="Veces" Binding="{Binding Occurrences}" Width="80"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DockPanel>
                        </TabItem>
                        <TabItem Header="Resumen">
                            <Grid Margin="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBox Text="{Binding SummaryText}"
                                         Height="120"
                                         Margin="0,0,0,6"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"/>
                                <DataGrid ItemsSource="{Binding SummarySentences}"
                                          Grid.Row="1"
                                          AutoGenerateColumns="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Oración" Binding="{Binding Text}" Width="*"/>
                                        <DataGridTextColumn Header="Puntuación" Binding="{Binding Score}" Width="120"/>
                                        <DataGridTextColumn Header="Orden" Binding="{Binding Order}" Width="80"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Notas">
                            <Grid Margin="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                        <Button Content="Nueva nota" Command="{Binding AddNoteCommand}" Margin="0,0,6,0"/>
                                        <Button Content="Eliminar" Command="{Binding DeleteNoteCommand}" Margin="0,0,6,0"/>
                                        <Button Content="Guardar" Command="{Binding SaveNotesCommand}"/>
                                    </StackPanel>
                                    <ListBox ItemsSource="{Binding Notes}"
                                             SelectedItem="{Binding SelectedNote}"
                                             DisplayMemberPath="Title"
                                             Height="150"/>
                                    <TextBox Text="{Binding SelectedNote.Content, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                                             Height="200"
                                             AcceptsReturn="True"
                                             TextWrapping="Wrap"
                                             VerticalScrollBarVisibility="Auto"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Archivos relacionados" FontWeight="Bold"/>
                                    <TextBox Text="{Binding SelectedNote.RelatedFiles, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                                             Height="120"
                                             AcceptsReturn="True"/>
                                    <TextBlock Text="Última actualización" FontWeight="Bold" Margin="0,10,0,0"/>
                                    <TextBlock Text="{Binding SelectedNote.UpdatedAt, TargetNullValue='--'}"/>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </GroupBox>
            </Grid>

            <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          ShowsPreview="True"
                          Width="4"
                          Background="{DynamicResource PanelBorder}"/>

            <GroupBox Header="Parámetros y fragmentos" Grid.Column="2" Margin="10,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="5">
                        <TextBlock Text="Configuración de análisis" FontWeight="Bold" Margin="0,0,0,6"/>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Top palabras" Margin="0,0,8,6"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding TopWordsCount}" Margin="0,0,0,6" MinWidth="80"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="N-gramas" Margin="0,0,8,6"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding PhraseSize}" Margin="0,0,0,6"/>
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Top frases" Margin="0,0,8,6"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding TopPhrasesCount}" Margin="0,0,0,6"/>
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Tamaño shingle" Margin="0,0,8,6"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding ShingleSize}" Margin="0,0,0,6"/>
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Archivos mínimos" Margin="0,0,8,6"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding DeduplicationMinFiles}" Margin="0,0,0,6"/>
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Repeticiones mínimas" Margin="0,0,8,6"/>
                            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding DeduplicationMinOccurrences}" Margin="0,0,0,6"/>
                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Similitud mínima" Margin="0,0,8,6"/>
                            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding SimilarityThreshold}" Margin="0,0,0,6"/>
                            <TextBlock Grid.Row="7" Grid.Column="0" Text="# de oraciones" Margin="0,0,8,0"/>
                            <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding SummarySentenceCount}"/>
                        </Grid>

                        <TextBlock Text="Stopwords (coma o salto de línea)" FontWeight="Bold"/>
                        <TextBox Text="{Binding StopWordsText}" AcceptsReturn="True" Height="90" Margin="0,4,0,10"/>

                        <GroupBox Header="Extracción manual">
                            <StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Etiqueta" Margin="0,0,8,6"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding FragmentLabelInput}" Margin="0,0,0,6"/>
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Línea inicial" Margin="0,0,8,6"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding FragmentStartLine}" Margin="0,0,0,6"/>
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Línea final" Margin="0,0,8,0"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding FragmentEndLine}"/>
                                </Grid>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                    <Button Content="Guardar fragmento" Command="{Binding ExtractFragmentCommand}" Margin="0,0,6,0"/>
                                    <Button Content="Detectar JSON" Command="{Binding AutoExtractJsonCommand}"/>
                                </StackPanel>
                                <CheckBox Content="Ordenar claves JSON" IsChecked="{Binding SortJsonKeys}" Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding JsonStatus}" Foreground="{DynamicResource AccentText}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </GroupBox>

                        <CheckBox Content="Usar marcadores en deduplicación"
                                  IsChecked="{Binding UsePlaceholders}"
                                  Margin="0,10,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
