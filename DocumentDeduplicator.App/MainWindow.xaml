<Window x:Class="DocumentDeduplicator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Deduplicador de Protocolos" Height="900" Width="1300">
    <Grid Background="{DynamicResource AppBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0">
            <Button Content="Seleccionar archivos" Command="{Binding SelectFilesCommand}" Margin="0,0,5,0"/>
            <Button Content="Limpiar lista" Command="{Binding ClearFilesCommand}" Margin="0,0,5,0"/>
            <Button Content="Analizar" Command="{Binding AnalyzeCommand}" Margin="0,0,5,0"/>
            <Button Content="Exportar resultados" Command="{Binding ExportCommand}" Margin="0,0,5,0"/>
            <Button Content="Cambiar tema" Command="{Binding ToggleThemeCommand}" Margin="0,0,5,0"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                <ProgressBar Width="200" Height="20" Value="{Binding ProgressValue}" Maximum="1"/>
                <TextBlock Text="{Binding ProgressText}" Foreground="{DynamicResource PrimaryText}" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Archivos seleccionados" Grid.Column="0">
                <DockPanel LastChildFill="True">
                    <DataGrid ItemsSource="{Binding Files}" SelectedItem="{Binding SelectedFile}" AutoGenerateColumns="False" Height="220" Margin="0,0,0,5" DockPanel.Dock="Top">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Name}" Width="150"/>
                            <DataGridTextColumn Header="Ruta" Binding="{Binding Path}" Width="*"/>
                            <DataGridTextColumn Header="Tamaño" Binding="{Binding Size}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBox Text="{Binding SelectedFileContent}" Margin="0,5,0,0" Height="200" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
                </DockPanel>
            </GroupBox>

            <GroupBox Header="Parámetros y fragmentos" Grid.Column="1" Margin="10,0,0,0">
                <ScrollViewer>
                    <StackPanel Margin="5">
                        <UniformGrid Columns="2" Rows="4" Margin="0,0,0,5">
                            <TextBlock Text="Top palabras"/>
                            <TextBox Text="{Binding TopWordsCount}"/>
                            <TextBlock Text="N-gramas"/>
                            <TextBox Text="{Binding PhraseSize}"/>
                            <TextBlock Text="Top frases"/>
                            <TextBox Text="{Binding TopPhrasesCount}"/>
                            <TextBlock Text="Tamaño shingle"/>
                            <TextBox Text="{Binding ShingleSize}"/>
                            <TextBlock Text="Archivos mínimos"/>
                            <TextBox Text="{Binding DeduplicationMinFiles}"/>
                            <TextBlock Text="Repeticiones mínimas"/>
                            <TextBox Text="{Binding DeduplicationMinOccurrences}"/>
                            <TextBlock Text="Similitud mínima"/>
                            <TextBox Text="{Binding SimilarityThreshold}"/>
                            <TextBlock Text="# de oraciones"/>
                            <TextBox Text="{Binding SummarySentenceCount}"/>
                        </UniformGrid>
                        <TextBlock Text="Stopwords (separadas por coma o salto de línea)" FontWeight="Bold"/>
                        <TextBox Text="{Binding StopWordsText}" AcceptsReturn="True" Height="80"/>
                        <Separator/>
                        <TextBlock Text="Extracción manual" FontWeight="Bold"/>
                        <UniformGrid Columns="2" Rows="3" Margin="0,0,0,5">
                            <TextBlock Text="Etiqueta"/>
                            <TextBox Text="{Binding FragmentLabelInput}"/>
                            <TextBlock Text="Línea inicial"/>
                            <TextBox Text="{Binding FragmentStartLine}"/>
                            <TextBlock Text="Línea final"/>
                            <TextBox Text="{Binding FragmentEndLine}"/>
                        </UniformGrid>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Guardar fragmento" Command="{Binding ExtractFragmentCommand}" Margin="0,0,5,0"/>
                            <Button Content="Detectar JSON" Command="{Binding AutoExtractJsonCommand}"/>
                        </StackPanel>
                        <CheckBox Content="Ordenar claves JSON" IsChecked="{Binding SortJsonKeys}"/>
                        <TextBlock Text="{Binding JsonStatus}" Foreground="{DynamicResource AccentText}" TextWrapping="Wrap"/>
                        <TextBlock Text="Fragmentos detectados" FontWeight="Bold"/>
                        <ListBox ItemsSource="{Binding SelectedFile.Fragments}" DisplayMemberPath="Label" Height="120"/>
                        <CheckBox Content="Usar marcadores en deduplicación" IsChecked="{Binding UsePlaceholders}"/>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
        </Grid>

        <TabControl Grid.Row="2" Margin="10">
            <TabItem Header="Palabras">
                <DataGrid ItemsSource="{Binding WordFrequencies}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Palabra" Binding="{Binding Word}" Width="*"/>
                        <DataGridTextColumn Header="Frecuencia" Binding="{Binding Count}" Width="100"/>
                        <DataGridTextColumn Header="Archivos" Binding="{Binding FileCount}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Frases">
                <DataGrid ItemsSource="{Binding PhraseFrequencies}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Frase" Binding="{Binding Phrase}" Width="*"/>
                        <DataGridTextColumn Header="Frecuencia" Binding="{Binding Count}" Width="100"/>
                        <DataGridTextColumn Header="Archivos" Binding="{Binding FileCount}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Duplicados">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <DataGrid ItemsSource="{Binding DuplicateBlocks}" AutoGenerateColumns="False" Grid.Row="0" Margin="0,0,0,5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Hash" Binding="{Binding Hash}" Width="150"/>
                            <DataGridTextColumn Header="Texto" Binding="{Binding Text}" Width="*"/>
                            <DataGridTextColumn Header="Frecuencia" Binding="{Binding Frequency}" Width="120"/>
                            <DataGridTextColumn Header="Archivos" Binding="{Binding FileCount}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <GroupBox Header="Similitud entre archivos" Grid.Row="1">
                        <DataGrid ItemsSource="{Binding Similarities}" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Archivo A" Binding="{Binding FileA}" Width="*"/>
                                <DataGridTextColumn Header="Archivo B" Binding="{Binding FileB}" Width="*"/>
                                <DataGridTextColumn Header="%" Binding="{Binding SimilarityPercentage}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Deduplicación">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <Button Content="Aplicar deduplicación" Command="{Binding ApplyDeduplicationCommand}" Margin="0,0,5,0"/>
                        <TextBlock Text="Selecciona los fragmentos a consolidar" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <DataGrid ItemsSource="{Binding DeduplicationPreviews}" AutoGenerateColumns="False" DockPanel.Dock="Bottom" SelectionMode="Extended">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="Aplicar" Binding="{Binding IsSelected}" Width="60"/>
                            <DataGridTextColumn Header="Etiqueta" Binding="{Binding Label}" Width="150"/>
                            <DataGridTextColumn Header="Texto" Binding="{Binding Text}" Width="*"/>
                            <DataGridTextColumn Header="Archivos" Binding="{Binding Files.Count}" Width="100"/>
                            <DataGridTextColumn Header="Veces" Binding="{Binding Occurrences}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>
            <TabItem Header="Resumen">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBox Text="{Binding SummaryText}" Height="120" Margin="0,0,0,5" TextWrapping="Wrap" AcceptsReturn="True"/>
                    <DataGrid ItemsSource="{Binding SummarySentences}" Grid.Row="1" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Oración" Binding="{Binding Text}" Width="*"/>
                            <DataGridTextColumn Header="Puntuación" Binding="{Binding Score}" Width="120"/>
                            <DataGridTextColumn Header="Orden" Binding="{Binding Order}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Notas">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Button Content="Nueva nota" Command="{Binding AddNoteCommand}" Margin="0,0,5,0"/>
                            <Button Content="Eliminar" Command="{Binding DeleteNoteCommand}" Margin="0,0,5,0"/>
                            <Button Content="Guardar" Command="{Binding SaveNotesCommand}"/>
                        </StackPanel>
                        <ListBox ItemsSource="{Binding Notes}" SelectedItem="{Binding SelectedNote}" DisplayMemberPath="Title" Height="150"/>
                        <TextBox Text="{Binding SelectedNote.Content, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}" Height="200" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Archivos relacionados" FontWeight="Bold"/>
                        <TextBox Text="{Binding SelectedNote.RelatedFiles, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}" Height="120" AcceptsReturn="True"/>
                        <TextBlock Text="Última actualización" FontWeight="Bold" Margin="0,10,0,0"/>
                        <TextBlock Text="{Binding SelectedNote.UpdatedAt, TargetNullValue='--'}"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
